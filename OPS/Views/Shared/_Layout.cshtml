<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Calcula Pro</title>
    <script>if (typeof module === 'object') {window.module = module; module = undefined;}</script>
    <link rel="import" href="~/Dialogs">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.3/themes/ui-lightness/jquery-ui.css" />
    <link href="~/css/jsTree/style.css" rel="stylesheet" />

    <script src="~/js/jquery-2.1.3.min.js"></script> 
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/iframesize.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery.jstree.js"></script>
    <script src="~/js/jquery.hotkeys.js"></script>
   
    @await RenderSectionAsync("Scripts", required: false)

    <style>
        /* Light mode */
        @@media (prefers-color-scheme: light) {
            nav{
                background-color: white;
            }
            #home {
                color:black;
            }
            #about {
                color:black;
            }
        }

        /* Dark mode */
        @@media (prefers-color-scheme: dark) {
            nav{
                background-color: black;
            }
            #home {
                color:white;
            }
            #about {
                color:white;
            }
        }
    </style>   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OPS</a> -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a id="home" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                         <li class="nav-item">
                            <a id="about" class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div style="display:inline-block; position:absolute;right:1%;">
                <div style="display:inline-block;vertical-align:middle;">
                    <span class="loading_dependencies" style="display:none"></span>&nbsp;
                </div>
                <div style="display:inline-block;vertical-align:middle;"> 
                    <span class="build" title='Build dependencies' onclick="javascript: $('.loading_dependencies').show(); BuildDependencies();"></span>&nbsp;
                </div>
                <a id="save" href="#" onclick="javascript: SaveDefinition();" style="text-decoration: none;display:none; padding: 5px;">Save definition</a>&nbsp;
                <a id="discard" href="../Home/Index" style="text-decoration: none;display:none; padding: 5px;">Discard changes</a>
		    </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>
</html>
