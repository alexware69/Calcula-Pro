@using OnlinePriceSystem.Controllers
@using Microsoft.AspNetCore.Mvc.Rendering
@using System.Globalization

@{
	ViewData["Title"] = "Home";
}

<div>
	<button onclick="javascript:document.location='../../TreeView/Edit?product=new'">New Product</button>	
	<button id="open-dialog" class="btn">Open Product</button>
    <button id="save-dialog" class="btn">Export</button>
	
</div>
<script>
	(function(){
		const { ipcRenderer } = require("electron");
        const fs = require('fs');
		document.getElementById("open-dialog")
                .addEventListener("click", () => {
            ipcRenderer.send("open-dialog");
        });
		ipcRenderer.on("open-dialog-reply", (sender, path) => {
			if (!path) return;
			document.location='../../TreeView/Edit?product='+ path;
            return;
        });
	}());
</script>
<script>
	$('#folder').on('change',function ()
